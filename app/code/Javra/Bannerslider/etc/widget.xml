<?xml version="1.0" encoding="UTF-8"?>

<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../Magento/Widget/etc/widget.xsd">
    <widget id="banner_slider" class="">
        <label translate="true">Banner Slider Widget</label>
        <description>Choose a slider from: Admin >> Content >> Banner Slider</description>
        <parameters>
            <parameter name="slider" xsi:type="select" source_model="" required="true"
                       visible="true" sort_order="10">
                <label translate="true">Slider</label>
            </parameter>
            <parameter name="template" xsi:type="select" visible="true" required="true" sort_order="10">
                <label translate="true">Template</label>
                <options>
                    <option name="default" value="widget/bannerslider.phtml" selected="true">
                        <label translate="true">Default Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>